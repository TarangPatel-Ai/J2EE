package com.caltech.dbUtil;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DbUtil {
	
	public static Connection getConn() throws ClassNotFoundException, SQLException {
		//Step-1: Register the vendor Driver
		Class.forName("com.mysql.jdbc.Driver");
		
		//Step-2: Connection with Database-> DBUrl, Username, Password
		Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/students", "root", "MTpatel@1012");
		return con;
	}
}
